
<div class="car-name">
  <%= @car.car%>
</div>

<div>
  <%= form_with model: @car, method: :put, local: true  do |f| %>
    <table class="table">
      <tbody>
        <tr>
          <th class="table-col1">車両番号：</th>
          <td class="table-col2"><%= @car.number %></td>
         </tr>
 
        <tr>
          <th class="table-col1">お客様名：</th>
          <td class="table-col2"><%= @car.name %></td>
        </tr>  
           
        <tr>
          <th class="table-col1">フロント担当者：</th>
          <% if @car.front.present? %>
            <td class="table-col2"><%= @car.front.name %></td>
          <% else %>
            <td><%= f.collection_select(:front_id, User.all, :id, :name,{prompt: "担当者を選択してください"},  {class: ' table-col2'}) %> </td>
          <% end %>
        </tr>
                  
        <tr>
          <th class="table-col1">板金担当者：</th>
          <% if @car.body.present? %>
            <td class="table-col2"><%= @car.body.name %></td>
          <% else %>
            <td><%= f.collection_select(:body_id, User.all, :id, :name,{prompt: "担当者を選択してください"},  {class: ' table-col2'}) %> </td>
          <% end %>
        </tr>
               
        <tr>
          <th class="table-col1">塗装担当者：</th>
          <% if @car.paint.present? %>
            <td class="table-col2"><%= @car.paint.name %></td>
          <% else %>
             <td><%= f.collection_select(:paint_id, User.all, :id, :name,{prompt: "担当者を選択してください"},  {class: ' table-col2'}) %> </td>
          <% end %>
        </tr>

        <tr>
           <th class="table-col1">納期：</th>
           <% if @car.date.present? %>
              <td class="table-col2"><%= @car.date %></td>
           <% end %>
        </tr>

        <tr>
          <th class="table-col1">金額：</th>
          <% if @car.price.present? %>
            <td class="table-col2"><b>¥</b> <%= @car.price %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    <div class= 'btn'>
      <%= f.submit '更新する'%>
      <%= link_to "データ編集", car_path(@car.id), method: :delete %>
      <%= link_to "データ削除", car_path(@car.id), method: :delete %>
    </div>
  <% end %>
  <div class = 'btn'>
  </div>
</div>
    